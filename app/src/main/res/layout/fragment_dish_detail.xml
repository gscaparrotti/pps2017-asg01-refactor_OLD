<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:text="@string/StringDettaglioOrdine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/dettaglio_ordine" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:textColor="@android:color/black"
        android:id="@+id/dettaglio_dish"
        android:layout_below="@+id/dettaglio_ordine"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dettaglio_ordinati"
        android:layout_below="@+id/dettaglio_dish"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dettaglio_da_servire"
        android:layout_below="@+id/dettaglio_ordinati"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dettaglio_costo_unitario"
        android:layout_below="@+id/dettaglio_da_servire"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dettaglio_costo_ordinati"
        android:layout_below="@+id/dettaglio_costo_unitario"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dettaglio_costo_totale"
        android:layout_below="@+id/dettaglio_costo_ordinati"
        android:layout_alignParentStart="true" />
</RelativeLayout>